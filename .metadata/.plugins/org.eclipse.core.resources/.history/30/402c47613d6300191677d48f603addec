import week3._
import week3.Cons
object nth {
  def nth[T](n: Int, l: List[T]):  T =
    if (n == 0) l.head
    else if (n < 0) throw new IndexOutOfBoundsException("Index is out bounds!")
    else nth(n-1, l.tail)
   val list = new Cons(1, new Cons(2, new Cons(3, new Nil)))
   nth(2, list)
   nth(-1, list)
   
}