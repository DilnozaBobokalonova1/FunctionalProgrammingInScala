object exercises {
	def sum(f: Int => Int, a: Int, b: Int) = {
		def loop(a:Int, acc:Int): Int =
			if (a > b) acc
			else loop(a+1, f(a) + acc)
		loop(a, 0)
	}
	sum(x => x*x, 3, 5)
	
	def product(f: Int => Int) (a:Int, b:Int): Int =
		if (a > b) 0
		else a * product(f) (a+1, b)
	product(x => x*x, 3, 5)
}